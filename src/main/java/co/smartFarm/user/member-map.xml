<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="co.smartFarm.user.MemberMapper">
	<!-- 이메일 중복체크 -->
	<select id="emailCheck" parameterType="co.smartFarm.user.MemberVO"
		resultType="co.smartFarm.user.MemberVO">
		SELECT * FROM MEMBER
		WHERE MEM_EMAIL = #{mem_email}
	</select>

	<select id="loginCheck"
		parameterType="co.smartFarm.user.MemberVO"
		resultType="co.smartFarm.user.MemberVO">
		SELECT *
		FROM MEMBER
		WHERE MEM_EMAIL = #{mem_email}

	</select>

	<select id="memberSelectList"
		resultType="co.smartFarm.user.MemberVO">
		SELECT * FROM MEMBER
	</select>

	<update id="memberReqAccept" parameterType="String">

		UPDATE MEMBER
		SET MEM_ATHR = 'B2'
		WHERE MEM_EMAIL = #{mem_email}

	</update>

	<insert id="memberInsert"
		parameterType="co.smartFarm.user.MemberVO">
		INSERT INTO MEMBER(MEM_EMAIL, MEM_PW, MEM_ADDR,
			MEM_DET_ADDR, MEM_NAME, MEM_ATHR, MEM_TEL)
		VALUES(#{mem_email},
			#{mem_pw}, #{mem_addr}, #{mem_det_addr}, #{mem_name}, 'B1',
			#{mem_tel})

	</insert>


</mapper>